<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:background="@android:color/black"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/promo_view"
              android:gravity="center_vertical">

    <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <TextView
                android:text="Product"
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/product_name" android:layout_weight="4"
                android:textSize="24sp"/>
        <View
                android:layout_width="0dp"
                android:layout_height="60dp" android:id="@+id/view2" android:layout_weight="1"/>
        <TextView
                android:text="Promo code"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/promo_text" android:layout_weight="1"
                android:textSize="24sp"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp" android:id="@+id/view3"
            android:background="@drawable/promo_background"/>
</LinearLayout>